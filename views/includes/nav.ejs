<% const nav = [
    {
        hash : '/',
        name : 'Home'
    },
    {
        hash : '/products',
        name : 'Products'
    },
    {
        hash : '/cart',
        name : 'Cart'
    },
    {
        hash : '/orders',
        name : 'Orders'
    },
    {
        hash : '/admin/show-product',
        name : 'Admin Products'
    },
    {
        hash : '/admin/add-product',
        name : 'Add Products'
    }
] %>

<header class="w-full">
   <div class="w-11/12 flex justify-between items-center font-sans mx-auto">
        <svg class="pre-logo-svg" height="80px" width="80px" fill="#111" viewBox="0 0 69 32">
            <path d="M68.56 4L18.4 25.36Q12.16 28 7.92 28q-4.8 0-6.96-3.36-1.36-2.16-.8-5.48t2.96-7.08q2-3.04 6.56-8-1.6 2.56-2.24 5.28-1.2 5.12 2.16 7.52Q11.2 18 14 18q2.24 0 5.04-.72z">
            </path>
        </svg>
        <div class="relative p-1 flex items-center justify-end w-max ml-5 mr-4 sm:mr-0 sm:right-auto">
            <% nav.forEach(route => { %>
                <% if(!isAuth) { %>
                    <% if(route.name === 'Admin Products' || route.name === 'Add Products') { %>
                        <% return; %>
                    <% } %>
                    <a class="block mr-4 w-max font-medium tracking-wide uppercase <%= path === route.hash ? 'text-gray-300' : 'text-black' %>" href="<%= route.hash %>"><%= route.name %></a>
                <% } else {%>
                    <a class="block mr-4 w-max font-medium tracking-wide uppercase <%= path === route.hash ? 'text-gray-300' : 'text-black' %>" href="<%= route.hash %>"><%= route.name %></a>
                <% } %>
            <% }) %>
        </div> 
        <a href="/login"> 
            <button class="bg-gradient-to-br from-gray-900 to-black text-white px-5 py-2 font-semibold flex items-center tracking-wide uppercase rounded-lg shadow-md">
                <span class="font-sans">
                    Login
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="fill-current text-white w-7 ml-2">
                    <polygon fill="var(--ci-primary-color, currentColor)" points="359.873 121.377 337.246 144.004 433.243 240.001 16 240.001 16 240.002 16 272.001 16 272.002 433.24 272.002 337.246 367.996 359.873 390.623 494.498 256 359.873 121.377" class="ci-primary"/>
                </svg>
            </button>
        </a> 
   </div>
</header>
