<%- include('../includes/seo') %>
<body>
    <%- include('../includes/nav') %>
    <main class="flex relative">
        <div class="w-10/12 mx-auto">
            <% if(itemData.length > 0) {%>
                <div>
                    <% itemData.forEach(item => { %>
                        <a  href="/products/<%= item._id %>" class="shadow-sm rounded-2xl bg-white w-1/3 h-auto m-auto px-4 py-3 flex flex-col float-left">
                           <div class="relative overflow-hidden w-full h-80">
                                <img 
                                class="w-full h-full object-cover"
                                src="<%= item.image %>" 
                                alt="<%= item.name %>">
                           </div>
                           <div class="mt-8">
                                <h1 class="text-black font-medium text-lg tracking-wide">
                                    <%= item.name %> <%= item.des%>
                                </h1> 
                                <div class="flex justify-between items-end mt-1 font-medium font-sans text-lg text-gray-400 tracking-normal">
                                    <h2>
                                        &#x20B9;<%= item.price %>
                                    </h2>
                                </div>
                           </div>
                        </a>
                    <% }) %>
                </div>
            <% } else { %>
                <h1>NO PRODUCTS ADDED!</h1>
            <%  } %>
        </div>
    </main>
</body>
</html>
 