<%- include('../includes/seo') %>
<body>
    <%- include('../includes/nav') %>
    <form class="flex flex-col max-w-md px-4 py-8 bg-white rounded-lg shadow dark:bg-gray-800 sm:px-6 md:px-8 lg:px-10" method="POST" action="/admin/<% if(edit) { %>edit-product<% } else { %>add-product<% } %>">
