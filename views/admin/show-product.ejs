<%- include('../includes/seo') %>
<body>
    <%- include('../includes/nav') %>
    <div>
        <% if(itemData.length > 0) {%>
            <div class="w-10/12 mx-auto mt-5">
                <% itemData.forEach(item => { %>
                    <div class="py-5 bg-white w-full h-96 flex justify-between border-b-2 border-gray-200">
                       <div class="overflow-hidden w-full h-full max-w-xs relative">
                            <img 
                            class="w-full h-full object-cover absolute top-0 left-0"
                            src="<%= item.image %>" 
                            alt="<%= item.name %>">
                       </div>
                        <div class="ml-4 mt-4">
                            <h1 class="text-gray-500 uppercase">shoe id #<%= item._id %></h1>
                            <h2 class="text-grey-800 font-semibold text-3xl my-3">
                                <%= item.name %> <span class="text-gray-800 font-light text-2xl"><%= item.tagname %></span>
                            </h2> 
                            <h3>
                                Gender : <%= item.gender[0] %>
                            </h3>
                            <p class="text-gray-400 text-base mt-5">
                                <%= item.description %>
                            </p>
                            <div class="flex justify-between items-end mt-4 font-medium text-2xl text-gray-800">
                                <h2>
                                    <%= item.price %> INR
                                </h2>
                                <div class="flex">
                                    <form action="/admin/delete-product" method="POST">
                                        <input type="hidden" value="<%= item._id %>" name="productID" >
                                        <button class="rounded-xl bg-black text-white py-2 px-4 text-lg font-medium shadow-sm">
                                            <span>
                                                Delete
                                            </span>
                                        </button>
                                   </form>
                                   <a href="/admin/edit-product/<%= item._id %>?edit=true" class="no-underline">
                                        <button class="rounded-xl bg-gray-300 text-gray-800 py-2 px-4 text-lg font-medium ml-3">
                                            <span>
                                                Edit
                                            </span>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div>NO PRODUCTS ADDED!</div>
        <%  } %>
    </div>
</body>
</html>
 