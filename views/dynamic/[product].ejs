<%- include('../includes/seo') %>
<body>
    <%- include('../includes/nav') %>
    <section class="flex w-full h-full items-center">
        <% if(item) { %>
            <div class="w-1/2 h-96">
                <img 
                class="w-full h-full object-cover"
                src="<%= item.image %>" 
                alt="<%= item.name %>">
           </div>
           <div>
                <h1 class="text-black font-bold">
                    <%= item.name %>
                </h1> 
                <p class="text-black text-xs">
                    <%= item.des %>
                </p>
           </div>
           <form action="/cart" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="productID" value="<%= item._id %>">
                <button class="bg-gradient-to-br from-gray-900 to-black text-white px-5 py-2 font-semibold flex items-center tracking-wide rounded-lg shadow-md">
                    Add to cart
                </button>
           </form>
        <% } else { %>
            <div>Not getting perfect data.</div>
        <% }%>
    </section>
</body>
</html>
 